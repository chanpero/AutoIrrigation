<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff"
    android:layout_width="300dp"
    android:layout_height="200dp"
    app:cardCornerRadius="10dp"
    tools:context=".DeviceStatus.FloatingInputActivity">

    <android.support.constraint.ConstraintLayout
        android:padding="5dp"
        android:id="@+id/floating_input_constraintlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/floating_input_EditText"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#F1F187"
            android:gravity="top"
            app:layout_constraintTop_toTopOf="@+id/floating_input_constraintlayout"/>

        <Button
            android:id="@+id/floating_input_cancelButton"
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:background="#FFFFFF"
            android:text="取消"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@+id/floating_input_EditText"
            app:layout_constraintStart_toStartOf="@+id/floating_input_constraintlayout" />

        <Button
            android:id="@+id/floating_input_submitButton"
            android:layout_width="145dp"
            android:layout_height="40dp"
            android:background="#fff"
            android:text="确认"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:layout_constraintTop_toBottomOf="@+id/floating_input_EditText"
            app:layout_constraintEnd_toEndOf="@+id/floating_input_constraintlayout"/>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>